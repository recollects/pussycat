<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="spring-redis.xml"/>

    <mvc:annotation-driven/>

    <context:component-scan base-package="com.alipay.pussycat"/>

    <!-- 加载配置文件 -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:redis-config.properties</value>
                <value>classpath:antx.properties</value>
            </list>
        </property>
    </bean>

    <!-- 应用上下文 -->
    <!--<bean id="pussyCatApplicationContext" class="com.alipay.pussycat.context.PussyCatApplicationContext"/>-->

    <!--<bean id="demoService" class="com.alipay.pussycat.demoClientClient.rpcServer.DemoService"/>-->

    <!-- redis缓存实现 -->
    <bean id="redisCacheManager" class="com.alipay.pussycat.register.redis.service.RedisCacheManagerImpl"/>

    <!-- 缓存管理工厂 -->
    <bean id="cacheManagerFactory" class="com.alipay.pussycat.register.redis.service.CacheManagerFactory">
        <property name="cacheName" value="${cache.name}"/>
    </bean>


</beans>    