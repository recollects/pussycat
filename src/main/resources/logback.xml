<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <property file="src/main/resources/antx.properties" />

    <!-- 控制台 -->
    <appender name="STDOUT-APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <levelMax>DEBUG</levelMax>
        </filter>
    </appender>

    <!-- 默认日志 -->
    <appender name="DEFAULT-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_root}/${app_name}/common-default.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>${log_level}</level>
            <onMatch>ACCEPT</onMatch>
            <!--<onMismatch>DENY</onMismatch>-->
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_root}/${app_name}/common-default.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <!-- 公共错误日志 -->
    <appender name="ERROR-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_root}/${app_name}/common-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_root}/${app_name}/common-error.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <!-- 缓存日志 -->
    <appender name="CACHE-DIGEST" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_root}/${app_name}/${app_name}-cache-digest.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>${log_level}</level>
            <!--<onMatch>ACCEPT</onMatch>-->
            <!--<onMismatch>DENY</onMismatch>-->
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_root}/${app_name}/${app_name}-cache-digest.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <!-- 服务发布 -->
    <appender name="SERVICE-PUBLISH-DIGEST" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_root}/${app_name}/${app_name}-service-publish-digest.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>${log_level}</level>
            <!--<onMatch>ACCEPT</onMatch>-->
            <!--<onMismatch>DENY</onMismatch>-->
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_root}/${app_name}/${app_name}-service-publish-digest.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <!-- 服务注册 -->
    <appender name="SERVICE-REGISTER-DIGEST" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_root}/${app_name}/${app_name}-service-register-digest.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>${log_level}</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_root}/${app_name}/${app_name}-service-register-digest.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <logger name="service-publish-digest" additivity="false">
        <level value="${log_level}" />
        <appender-ref ref="SERVICE-PUBLISH-DIGEST" />
    </logger>
    <logger name="service-register-digest" additivity="false">
        <level value="${log_level}" />
        <appender-ref ref="SERVICE-REGISTER-DIGEST" />
    </logger>

    <logger name="cache-digest" additivity="false">
        <level value="${log_level}" />
        <appender-ref ref="CACHE-DIGEST" />
    </logger>

    <root level="${log_level}">
        <appender-ref ref="STDOUT-APPENDER" />

        <appender-ref ref="DEFAULT-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />

    </root>

</configuration>
